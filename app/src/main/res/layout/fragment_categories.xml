<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CategoriesFragment">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:src="@drawable/img"
            app:tint="@color/DeepSkyBlue" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/icon1"
            android:gravity="center_vertical"
            android:text="Home"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="52dp"
        android:scrollbars="none"
        android:layout_marginBottom="100dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingHorizontal="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/relativeLayout_ayurveda"
                android:layout_columnWeight="1"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:clickable="true"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:translationZ="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Ayurveda"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_margin="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ayurveda_logo"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/relativeLayout_meditation"
                android:layout_columnWeight="1"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:clickable="true">

                    <LinearLayout
                        android:translationZ="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Meditation"
                            android:textSize="20sp"
                            android:background="@drawable/cardbg_1"
                            android:textStyle="bold" />
                    </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="5dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img3"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/relativeLayout_acupunture"
                android:layout_columnWeight="1"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:clickable="true"
                app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:translationZ="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Acupunture"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_margin="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/acupunture_logo"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/relativeLayout_yoga"
                android:layout_columnWeight="1"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:clickable="true"
                app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:translationZ="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Yoga"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_margin="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/yoga_logo"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/relativeLayout_hypnotherapy"
                android:layout_columnWeight="1"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:clickable="true"
                app:cardCornerRadius="10dp">


                    <LinearLayout
                        android:translationZ="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Hypnotherapy"
                            android:textSize="20sp"
                            android:background="@drawable/cardbg_1"
                            android:textStyle="bold" />

                    </LinearLayout>
                <androidx.cardview.widget.CardView

                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_margin="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hypnotheraphy_logo"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/relativeLayout_reiki"
                android:layout_columnWeight="1"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:clickable="true"
                app:cardCornerRadius="10dp">


                    <LinearLayout
                        android:translationZ="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Reiki"
                            android:textSize="20sp"

                            android:textStyle="bold" />

                    </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_margin="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/reiki_home"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>


</FrameLayout>
