<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/TOP_START"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#25E1E1E1"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="MadCoach"
            android:textStyle="bold" />


        <androidx.appcompat.widget.SearchView
            android:id="@+id/search1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/light_bg"
            app:iconifiedByDefault="false"
            app:layout_constraintStart_toStartOf="@id/imageView2"
            app:queryBackground="@android:color/transparent"
            app:queryHint="Search" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_bg"
            android:contentDescription="TODO"
            android:src="@drawable/madcoach_logo"
            tools:ignore="ContentDescription,HardcodedText" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="125dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="10dp"
            app:cardElevation="0dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_margin="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:text="Dr. Amit Jha"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_gravity="end"
                        android:src="@drawable/maledoctor" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_margin="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:text="Dr. Divya B"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="41dp"
                        android:layout_marginStart="10dp"
                        android:textSize="10sp"
                        android:text="Hello I'm Dr Divya"/>
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_gravity="end"
                        android:src="@drawable/femaledoctor" />
                </androidx.cardview.widget.CardView>

            </GridLayout>


        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:paddingHorizontal="5dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/create_profile">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/Red"
                        android:layout_margin="5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/Cyan"
                        android:layout_margin="5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/Maroon"
                        android:layout_margin="5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/Blue"
                        android:layout_margin="5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/Yellow"
                        android:layout_margin="5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/Silver"
                        android:layout_margin="5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/OrangeRed"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </HorizontalScrollView>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</FrameLayout>