<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegisterActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/login_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardview"
        android:layout_alignParentBottom="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/therapy"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/psychotherapy" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="12dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/LoginNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            app:itemIconSize="34dp"
            app:itemIconTint="@color/color_item_nav"
            app:itemTextColor="@color/color_item_nav"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/loginregister" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>