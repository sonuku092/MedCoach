<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.RegisterTabFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_bg"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/full_name"
            android:textColorHint="@color/DeepSkyBlue"
            app:boxStrokeColor="@color/DeepSkyBlue"
            app:boxStrokeErrorColor="@color/ScarletRed"
            app:counterOverflowTextColor="@color/ScarletRed"
            app:counterTextColor="@color/DeepSkyBlue"
            app:errorEnabled="true"
            app:errorIconTint="@color/ScarletRed"
            app:errorTextColor="@color/ScarletRed"
            app:helperTextTextColor="@color/DeepSkyBlue"
            app:hintTextColor="@color/DeepSkyBlue"
            app:placeholderText="abc"
            app:placeholderTextColor="#80000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/ic_profile_24"
                android:drawablePadding="5dp"
                android:padding="0dp"
                android:singleLine="true"
                android:textColorHint="#757575" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Reg_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_id_mob_no"
            android:textColorHint="@color/DeepSkyBlue"
            app:boxStrokeColor="@color/DeepSkyBlue"
            app:boxStrokeErrorColor="@color/ScarletRed"
            app:counterEnabled="true"
            app:counterOverflowTextColor="@color/ScarletRed"
            app:errorEnabled="true"
            app:errorIconTint="@color/ScarletRed"
            app:errorTextColor="@color/ScarletRed"
            app:helperTextTextColor="@color/DeepSkyBlue"
            app:hintTextColor="@color/DeepSkyBlue"
            app:placeholderText="abc@gmail.com"
            app:placeholderTextColor="#80000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/ic_email_24"
                android:drawablePadding="5dp"
                android:padding="0dp"
                android:singleLine="true"
                android:textColorHint="#757575" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/DeepSkyBlue"
            app:boxStrokeColor="@color/DeepSkyBlue"
            app:boxStrokeErrorColor="@color/ScarletRed"
            app:counterOverflowTextColor="@color/ScarletRed"
            app:counterTextColor="@color/DeepSkyBlue"
            app:errorEnabled="true"
            app:errorIconTint="@color/ScarletRed"
            app:errorTextColor="@color/ScarletRed"
            app:helperTextTextColor="@color/DeepSkyBlue"
            app:hintTextColor="@color/DeepSkyBlue"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regpassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/ic_password_24"
                android:drawablePadding="5dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="0dp"
                android:singleLine="true"
                android:textColorHint="#757575" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/DeepSkyBlue"
            app:boxStrokeColor="@color/DeepSkyBlue"
            app:boxStrokeErrorColor="@color/ScarletRed"
            app:counterOverflowTextColor="@color/ScarletRed"
            app:counterTextColor="@color/DeepSkyBlue"
            app:errorEnabled="true"
            app:errorIconTint="@color/ScarletRed"
            app:errorTextColor="@color/ScarletRed"
            app:hintTextColor="@color/DeepSkyBlue"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cpassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/ic_forgot_24"
                android:drawablePadding="5dp"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:padding="0dp"
                android:singleLine="true"
                android:textColorHint="#757575" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Res_Btn"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:backgroundTint="@color/ScarletRed"
                android:text="@string/reset"
                android:textStyle="bold"
                tools:targetApi="lollipop" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Reg_Btn"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:backgroundTint="@color/Orange"
                android:text="@string/register"
                android:textStyle="bold"
                tools:targetApi="lollipop" />

        </LinearLayout>

